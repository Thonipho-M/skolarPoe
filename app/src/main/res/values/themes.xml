<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main app theme â€“ must be AppCompat-based because MainActivity extends AppCompatActivity -->
    <style name="Theme.Skolar20" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- You can tweak these colours to match your Compose theme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Status bar colour for older APIs -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="Theme.Skolar20.Splash" parent="Theme.SplashScreen">
        <!-- After the splash is done, this theme is applied -->
        <item name="postSplashScreenTheme">@style/Theme.Skolar20</item>
    </style>

</resources>
